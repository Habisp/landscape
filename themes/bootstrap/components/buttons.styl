// Base styles

// Core
.btn

  $primary = $color-light
  $secondary = darken($color-light, 10%)

  padding: 4px 10px 4px;
  font-size: $base-font-size
  line-height: $base-line-height
  color: $button-color-default
  text-align: center
  text-shadow: 0 1px 1px rgba(255,255,255,.75)
  gradient-bar($primary, $secondary)
  border: 1px solid $button-border-color
  border-bottom-color: $button-border-color-bottom
  border-radius: $button-border-radius
  box-shadow: inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05)

  // Give IE7 some love
  ie7-restore-left-whitespace()

  // Hover state
  &:hover
    color: $button-color-default
    text-decoration: none
    background-color: #e6e6e6
    background-position: 0 -15px

    // transition is only when going to hover, otherwise the background
    // behind the gradient (there for IE<=9 fallback) gets mismatched
    transition: background-position .1s linear

    .caret
      opacity: 1

  &:focus
    @extend .tab-focus

  // Active state
  &.active,
  &:active
    background-image: none
    box-shadow: inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05)
    background-color: darken($color-light, 10%)
    background-color: darken($color-light, 15%) \\9
    color: rgba(0,0,0,.5)

    .caret
      opacity: .65 !important

  // Disabled state
  &.disabled,
  &[disabled]
    background-image: none
    background-color: darken($color-light, 10%);
    opacity: .65
    box-shadow: none

  .caret
    margin-left: 0
    margin-top: 7px

// Button Sizes

// Large
.btn-large
  padding: 9px 14px
  font-size: ($base-font-size + 2px)
  line-height: normal
  border-radius: ($button-border-radius * 1.2)
  .icon
    margin-top: 1px

// Small
.btn-small
  padding: 5px 9px
  font-size: ($base-font-size - 2px)
  line-height: ($base-line-height - 2px)
  .icon
    margin-top: -1px

// Alternate buttons

// Set text color
.btn-primary,
.btn-primary:hover,
.btn-warning,
.btn-warning:hover,
.btn-danger,
.btn-danger:hover,
.btn-success,
.btn-success:hover,
.btn-info,
.btn-info:hover
  text-shadow: 0 -1px 0 rgba(0,0,0,.25)
  color: $color-light

// Provide *some* extra contrast for those who can get it
.btn-primary.active,
.btn-warning.active,
.btn-danger.active,
.btn-success.active,
.btn-info.active
  color: rgba(255,255,255,.75)

// Set the backgrounds
// -------------------------
.btn-primary
  button-background($button-primary-background, spin($button-primary-background, 20))

// Warning appears are orange
.btn-warning
  button-background(lighten($color-warning, 15%), $color-warning)

// Danger and error appear as red
.btn-danger
  button-background(#ee5f5b, #bd362f)

// Success appears as green
.btn-success
  button-background(#62c462, #51a351)

// Info appears as a neutral blue
.btn-info
  button-background(#5bc0de, #2f96b4)
