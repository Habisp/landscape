/*
 * ESN Frontend Toolkit
 */
 
$theme = "battlelog"

vendor-prefixes = webkit moz official o ms

/*
 * Nib
 * Stylus mixins, utilities, components, and gradient image generation.
 * https://github.com/visionmedia/nib
 */
@import "nib"

// Base: Normalize
@import "base/normalize"

// Theme: Config
@import "themes/"+$theme+"/config"

// Base: Mixins & utils
@import "base/mixins"
@import "base/utilities"

// Base: Scaffolding
@import "base/scaffolding"

// Base: CSS
@import "base/typography"
@import "base/forms"
@import "base/tables"

// Components: Common
@import "components/dropdown"
@import "components/wells"
@import "components/close"

// Components: Navigation
@import "components/navbar"
@import "components/navs"

// Components: Popovers
@import "components/modal"
@import "components/popover"
@import "components/tooltip"

// Components: Buttons & Alerts
@import "components/buttons"

// Components: Misc
@import "components/thumbnails"

// Base: Responsive
@import "base/responsive"

// Theme: Styles
@import "themes/"+$theme+"/theme"