// ESN Landscape
// Progress bars

// Animation
@keyframes progress-bar-stripes
  from
    background-position: 0 0
  to
    background-position: 40px 0

// The bars

// Outer container
.progress
  overflow: hidden
  height: 18px
  margin-bottom: 18px
  gradient-vertical(#f5f5f5, #f9f9f9)
  box-shadow: inset 0 1px 2px rgba(0,0,0,.1)
  // Border radius
  if $progress-border-radius is a 'unit'
    border-radius: $progress-border-radius
  else
    border-radius: $base-border-radius
  
  // Bar of progress
  .bar
    width: 0%
    height: 18px
    color: $color-light
    font-size: 12px
    text-align: center
    text-shadow: 0 -1px 0 rgba(0,0,0,.25)
    gradient-vertical(lighten($anchor-color, 10%), $anchor-color)
    box-shadow: inset 0 -1px 4px rgba(0,0,0,.1), inset 0 1px 4px rgba(255,255,255,.4)
    box-sizing: border-box
    transition: width .6s ease

// Striped bars
.progress-striped .bar
  gradient-striped(#62c462)
  background-size: 40px 40px

// Call animation for the active one
.progress.active .bar
  animation: progress-bar-stripes 2s linear infinite

// Colors

// Danger (red)
.progress-danger
  color = lighten(saturate($color-danger, 80%), 30%)
  .bar
    gradient-vertical(color, darken(color, 30%))
  &.progress-striped .bar
    gradient-striped(color)

// Success (green)
.progress-success
  color = lighten(saturate($color-success, 80%), 30%)
  .bar
    gradient-vertical(color, darken(color, 30%))
  &.progress-striped .bar
    gradient-striped(color)

// Info (teal)
.progress-info
  color = lighten(saturate($color-info, 60%), 40%)
  .bar
    gradient-vertical(color, darken(color, 40%))
  &.progress-striped .bar
    gradient-striped(color)
